<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/launcher_time_layout_min_height"
    android:orientation="horizontal">

    <TextClock
        android:layout_width="0dp"
        android:textSize="@dimen/launcher_text_clock_text_size"
        android:layout_height="match_parent"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/launcher_week_text"
            android:text="周末"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/launcher_week_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="03 29"
            android:id="@+id/launcher_date_text"
            android:textSize="@dimen/launcher_week_text_size"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>